<%= image_tag @pin.image.url %>

<p>
  <strong>Description:</strong>
  <%= @pin.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @pin.price %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @pin.deadline %>
</p>

<% if @pin.url? %>
	<p>
  		<strong>Link:</strong>
  		<%=  link_to 'Visualize it', @pin.url, :target => "_blank" %>
	</p>
<% end %>

<% if @pin.user == current_user %>
  <%= link_to 'Edit', edit_pin_path(@pin) %>
<% end %>
<%= link_to 'Back', pins_path %>